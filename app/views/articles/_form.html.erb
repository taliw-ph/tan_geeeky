<%= form_with model: article, class: "space-y-6 bg-white p-6 rounded-lg shadow-md" do |form| %>
<div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
    <div class="text-red-500 text-sm mt-1"><%= message %></div>
    <% end %>
</div>

<div class="mb-4">
    <%= form.label :body, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.text_area :body, rows: 5, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
    <div class="text-red-500 text-sm mt-1"><%= message %></div>
    <% end %>
</div>

<div class="mb-4">
    <%= form.label :status, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public' }, class: "w-full border border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" %>
</div>

<div class="mt-4">
    <%= form.submit "Save Article", class: "bg-blue-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-blue-600" %>
</div>
<% end %>